extend ../layout/layout
block css_files
  link(rel='stylesheet', href='/static/css/login-signup.css')

block script_files
  script(src='/static/js/login.js')
  script(src='/static/js/login-handler.js')
  script(src='/static/js/service.js')

block right_menu
  a(href="/signup").right-menu.
    Sign up

block app_main
  .login-container
      div(class="login-title").
        Log in
      div(class="form-container")
        .row.no-margin.
            <label class="col-xs-4" for="email">Email address:</label>
            <input class="col-xs-8" type="email" id="email" name="email" value="">
        .row.no-margin.
            <label class="col-xs-4" for="email">Password:</label>
            <input class="col-xs-8" type="password" id="password" name="password">
        .row.no-margin.error-row
        .row.no-margin.center-button-container.
            <button id="login-button" class="login-button" type="submit">
                Log in
            </button>
        .row.no-margin.center-button-container.
            <a href="/signup">or Create an account</a>
